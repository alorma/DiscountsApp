<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
    </style>

    <style name="AppTheme.DiscountsList">
        <item name="colorPrimary">@color/colorSurface</item>
        <item name="colorPrimaryDark">@color/colorSurface</item>
        <item name="bottomAppBarStyle">@style/DiscountsListBottomBarStyle</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DiscountsListBottomBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
</resources>
