<resources>
    <style name="discount_item_info_font" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/on_surface_60</item>
    </style>

    <style name="discount_item_info">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/on_surface_20</item>
        <item name="android:textAppearance">@style/discount_item_info_font</item>
    </style>

    <style name="discount_item_info.place">
        <item name="android:drawableStart">@drawable/ic_location</item>
    </style>

    <style name="discount_item_info.code">
        <item name="android:drawableStart">@drawable/ic_barcode</item>
    </style>

    <style name="discount_item_info.date">
        <item name="android:drawableStart">@drawable/ic_time</item>
    </style>


    <style name="discount_item_info.discount">
        <item name="android:drawableStart">@drawable/ic_euro</item>
    </style>

    <style name="discount_item_info.divider">
        <item name="android:background">@drawable/divider_surface_short</item>
    </style>

    <style name="discount_item_info.divider.full">
        <item name="android:background">@color/black</item>
    </style>
</resources>
