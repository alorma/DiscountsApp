<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/discountsListFragment">

    <include app:graph="@navigation/new_discount_graph" />

    <fragment
        android:id="@+id/discountsListFragment"
        android:name="com.alorma.discounts.ui.discountslist.DiscountsListFragment"
        android:label="DiscountsListFragment"
        tools:layout="@layout/discounts_list_fragment"
        >
        <action
            android:id="@+id/action_discountsListFragment_to_discountDetailFragment"
            app:destination="@id/discountDetailFragment"
            />
        <action
            android:id="@+id/action_discountsListFragment_to_newDiscountActivity"
            app:destination="@id/new_discount_graph"
            />

    </fragment>
    <fragment
        android:id="@+id/discountDetailFragment"
        android:name="com.alorma.discounts.ui.discountdetail.DiscountDetailFragment"
        android:label="DiscountDetailFragment"
        tools:layout="@layout/discount_detail_fragment"
        >
        <argument
            android:name="discount_id"
            app:argType="string"
            />
    </fragment>

</navigation>