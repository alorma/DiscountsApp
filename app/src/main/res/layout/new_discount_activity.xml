<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.newdiscount.NewDiscountActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/appBar">
        <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:title="Add discount"/>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar"
            android:padding="16dp"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/codeFieldImage"
                android:padding="8dp"
                android:background="@drawable/barcode_placeholder"
                android:foreground="@drawable/barcode_placeholder_click"
                android:contentDescription="Barcode placeholder"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Scan barcode"
                android:gravity="center"
                android:id="@+id/codeFieldPlaceholderText"
                android:textColor="@color/on_surface_20"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:fontFamily="sans-serif-medium"
        />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>