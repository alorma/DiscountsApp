<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.alorma.discounts.ui.discountdetail.DiscountDetailViewModel"/>

        <variable name="viewModel" type="DiscountDetailViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:id="@+id/appBar">

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    app:title="@{ viewModel.discount.title }"
                    app:menu="@menu/discount_detail_menu"
            />

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
                android:id="@+id/barcodeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp"
                android:background="@color/barcode_background"
                app:loadBarcode="@{ viewModel.discount.barcode }"
                android:contentDescription="@{ viewModel.discount.barcode.contents }"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/code"
                app:loadBarcode="@{ viewModel.discount.barcode }"
        />

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_margin="16dp"
                android:text="@{viewModel.discount.used ? @string/discount_mark_as_not_used : @string/discount_mark_as_used }"
                android:id="@+id/changeUsedStatus"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"/>

    </LinearLayout>
</layout>