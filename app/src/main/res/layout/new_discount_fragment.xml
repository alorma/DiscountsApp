<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.alorma.discounts.ui.newdiscount.NewDiscountViewModel"/>
        <import type="android.view.View"/>

        <variable name="viewModel" type="NewDiscountViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.newdiscount.NewDiscountFragment">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/appBar">
            <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:title="New discount"/>
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:id="@+id/codeFieldImage"
                android:padding="8dp"
                android:layout_margin="16dp"
                app:loadBarcode="@{viewModel.barcode}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appBar"
                android:background="@{ viewModel.barcode != null ? null  : @drawable/barcode_placeholder }"
                android:foreground="@drawable/barcode_placeholder_click"
                android:contentDescription="Barcode placeholder"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Scan barcode"
                android:gravity="center"
                android:id="@+id/codeFieldPlaceholderText"
                android:visibility="@{ viewModel.barcode != null ? View.INVISIBLE : View.VISIBLE }"
                app:layout_constraintTop_toTopOf="@id/codeFieldImage"
                app:layout_constraintBottom_toBottomOf="@id/codeFieldImage"
                app:layout_constraintStart_toStartOf="@id/codeFieldImage"
                app:layout_constraintEnd_toEndOf="@id/codeFieldImage"
                android:textColor="@color/on_surface_20"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:fontFamily="sans-serif-medium"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/codeText"
                app:loadBarcode="@{ viewModel.barcode }"
                app:layout_constraintTop_toBottomOf="@id/codeFieldImage"
                app:layout_constraintStart_toStartOf="@id/codeFieldImage"
                app:layout_constraintEnd_toEndOf="@id/codeFieldImage"
                android:layout_margin="8dp"
                android:textColor="@color/on_surface_20"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionField"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/codeText"
                android:hint="Description"
                android:layout_margin="16dp"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.alorma.discounts.ui.widget.SelectorFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expirationField"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/SelectorField"
                app:layout_constraintTop_toBottomOf="@id/descriptionField"
                android:hint="Expires"
                android:layout_margin="16dp"
        />

        <com.alorma.discounts.ui.widget.SelectorFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/placeField"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/SelectorField"
                app:layout_constraintTop_toBottomOf="@id/expirationField"
                android:hint="Place"
                android:layout_margin="16dp"
        />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="16dp"
                android:text="SAVE"
                android:id="@+id/saveButton"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>